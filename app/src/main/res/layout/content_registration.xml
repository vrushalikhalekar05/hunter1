<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CACFD1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/loginscrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="80dp"
            android:text="Registration"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/FullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Full Name" />

        <EditText
            android:id="@+id/txtFullName"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:ems="10"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Address" />

        <EditText
            android:id="@+id/txtAddress"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:ems="10" />

        <TextView
            android:id="@+id/secTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Email" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:ems="10"

            android:maxLines="1" />

        <TextView
            android:id="@+id/thirdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Mobile" />

        <EditText
            android:id="@+id/txtMobile"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"

            android:ems="10"
            android:inputType="number"
            android:maxLines="1" />


        <TextView
            android:id="@+id/fourPanNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="PanCard No" />

        <EditText
            android:id="@+id/txtPanCard"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:maxLines="1"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/fiveAdharNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Adhar Card Number" />

        <EditText
            android:id="@+id/txtAdharNo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:singleLine="true"
            android:ems="10"
            android:maxLines="1" />

        <TextView
            android:id="@+id/sixIMEI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="IMEI Number" />

        <EditText
            android:id="@+id/txtIMEI"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:editable="false"
            android:ems="10" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:background="@drawable/shaperound"
            android:text="Register" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>



